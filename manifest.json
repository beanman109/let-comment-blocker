{
  "manifest_version": 2,
  "name": "LowEndTalk User Comment Blocker",
  "version": "1.1.4",
  "description": "Hide comments from selected users and block any network/media requests they load on LowEndTalk.",

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://lowendtalk.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "let-blocker@example.com",
      "data_collection_permissions": {
        "required": ["none"],
        "policy_url": ""
      }
    }
  }
}